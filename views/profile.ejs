</head>
<body>
  <div id="main">
    <div id="nav">
   <div id="right">
    <a href="#">home</a>
    <a href="#">about</a>
    <a href="#">contact</a>
    <a href="/logout">Logout</a>
    <a href="/feed">Feed</a>
    
 
   </div>
   <div id="search">
    <input id="searchid" type="text"placeholder="">
    <div id="resultant">
     </div>
      
    </div>
  
   <div id="left">
    <a href=""><i class="ri-instagram-line"></i></a>
    <a href=""><i class="ri-facebook-line"></i></a>
    <a href=""><i class="ri-linkedin-line"></i></a>
    <a href=""><i class="ri-twitter-line"></i></a>
   </div>
    </div>

          
 <form id="form" style="position: absolute; top: 10%; left: 40%;" action="/upload" enctype="multipart/form-data" method="post">
  <input id="filename" type="file" name="file">
  <input type="submit" >
</form>
    <img src="../images/uploads/<%= user.profile %>" alt="">

 <div id="card">
  

  <div class="container">
    <a  href="/like/<%= user._id %>" > <i class="ri-thumb-up-line" style="padding-left: 10px; "></i>Liked by <%= user.like.length %> </a>  

 
  
    <div class="service-details">
    
    <img id="img"  style= "position: absolute; height: 100%;  width: 50%;object-fit:cover  ; object-position: center;" src="../images/uploads/<%= user.profile %>" alt="">
      <div class="service-white service-text">
       <div id="det">
        <h1>User Details</h1>
        <h3>Name: <%= user.username %></h3>
        <h3>Contact: <%= user.number %></h3>
        <h3>Email: <%= user.email %></h3>

        
       </div>
      </div>
    </div>

  </div>
 </div>
  </div>
</body>
<script>
function photo (){
  var img =document.querySelector("#img")
img.addEventListener("click", function(){
document.querySelector("#filename").click();
});
document.querySelector("#filename")
.addEventListener("change",function(){
  document.querySelector("#form").submit();
})
}
photo()

function search (){

  var users = document.querySelector("#users")
var search = document.querySelector("#search input")
search.addEventListener("change",function(){
  users.style.opacity= "1"
})


var inp=document.querySelector("#searchid")

  inp.addEventListener("input",function(){  
    var val=inp.value;
    console.log(val)

  if(val.trim().length>0){
    axios.get(`/find/${val}`).then(function(data){
      console.log(data)

     var clutter=""
      data.data.forEach(function(member){
        console.log(member)
        clutter+=`
        <div class="person">
      <div id="dp">
        <img src="../../images/uploads/${member.image}" alt="">
      </div>
      <a href ="/user/profile/${member._id}"><h5 style="color:black;">@${member.username}</h5></a>
      
    </div>
        `
      })
      document.querySelector("#resultant").innerHTML=clutter;
})
  }
  else{
    document.querySelector("#resultant").innerHTML="";

  }
  
      })
}


</script>
</html>






















